{
    "openapi": "3.0.3",
    "info": {
        "title": "User API",
        "version": "1.0"
    },
    "servers": [{ "url": "https://localhost:8000" }],
    "paths": {
        "/api/users": {
            "post": {
                "description": "Register New User",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "abangkuy": {
                                    "description": "Register New User",
                                    "value": {
                                        "username": "abangkuy",
                                        "password": "abangkuy",
                                        "name": "Abang Kuy"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "required": ["name", "username", "password"],
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400":{
                        "description": "Validation errors",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "validationerror": {
                                        "description": "Validation errors",
                                        "value": {
                                            "errors": {
                                                "name": [
                                                    "The name field is required."
                                                ],
                                                "username": [
                                                    "The username field is required."
                                                ],
                                                "password": [
                                                    "The password field is required."
                                                ]
                                            }
                                        }
                                    }
                                }
                            }   
                        }
                    },
                    "201": {
                        "description": "Success Register User",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "description": "Success Register User",
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "username": "abangkuy",
                                                "name": "Abang Kuy"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/login": {
            "post": {
                "description": "Login User",
                "requestBody":{
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["username", "password"],
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Login User",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "token": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/current": {
            "get": {
                "description": "Get Current User"
            },
            "patch": {
                "description": "Update Current User"
            }
        },
        "/api/users/logout": {
            "delete": {
                "description": "Logout User"
            }
        }
    }
}
